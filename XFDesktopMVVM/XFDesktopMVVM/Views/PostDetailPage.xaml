<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFDesktopMVVM.Views.PostDetailPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="10" Spacing="20">
            <Label Text="{Binding Post.Title}" FontSize="Large" TextColor="Blue" />
            <Label Text="{Binding Post.Body}" />
            <Image Source="{Binding Post.ImageUrl}" WidthRequest="120"
                 HeightRequest="120" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>